{
  "name": "codestyle",
  "isService": false,
  "maintainerTeam": "everyone",
  "version": "22.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeoGears/codestyle.git"
  },
  "description": "ESLint configuration used at Gears of Leo / LeoVegas",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-react": "eslint -c .react-eslintrc .",
    "test": "nyc mocha -R mocha-multi-reporters --reporter-options configFile=mocha-config.json --exit --full-trace --recursive",
    "test-watch": "npm run test -- -w",
    "coverage": "nyc mocha --full-trace --recursive --exit > test-results.tap && nyc report",
    "prepare": "npm run lint && npm run lint-react && npm run test",
    "ci": "nyc mocha -R tap --full-trace --recursive > test-results.tap && nyc report"
  },
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.0.0"
  },
  "contributors": [
    "Mikael Abrahamsson <mikael.abrahamsson@leovegas.com>",
    "Sebastian Stenerdal <sebastian.stenerdal@leovegas.com>",
    "Enzo Martin <enzo.martin@leovegas.com>"
  ],
  "keywords": [
    "codestyle",
    "eslint",
    "eslint rules",
    "rules",
    "es6",
    "react"
  ],
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.0",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi-reporters": "^1.1.7",
    "nyc": "^14.1.1"
  },
  "peerDependency": {
    "babel-eslint": ">=8.2.2",
    "eslint": ">= 4"
  }
}
